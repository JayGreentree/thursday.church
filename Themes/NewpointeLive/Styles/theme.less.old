
// Load Master Styles
// -------------------------
@import "../../../Styles/Bootstrap/variables.less";
@import "../../../Styles/_rock-core.less";
@import "../../../Styles/_store.less";
@import "../../../Styles/_rock-variables.less";
@import "_variables.less";
@import "_variable-overrides.less";
@import "_print.less";


/*
    Rock Theme Styles

    1. HTML Overrides
    2. Bootstrap Overides
    3. Theme Styling
    4. Responsive Overrides

*/

// 1. HTML Overrides
// -------------------------

html {
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
}

main {
    display: block;
}

a {
    color: @newpointe-green;
    text-decoration: none;

    &:hover {
        color: @navbar-background;
        text-decoration: none;
    }
}

// 2. Bootstrap Overrides
// -------------------------

.navbar {
    position: static; // default is relative which causes the dropdowns to go under the other navbars dispite having a higher z-index - JME 9/9/2013
    // using fontawesome nav toggle button instead of the BS default
    .navbar-toggle {
        padding: 6px 10px;

        i.fa-bars {
            color: @navbar-inverse-toggle-icon-bar-bg;
        }
    }
}

a:hover i.fs {
    text-decoration: none;
}

// 3. Theme Styling
// -------------------------

.page-icon {
    display: none;
}

header {
    .page-menu,
    .login-status {
        float: right;
    }

    .navbar {
        background-color: @header-bg;
        border: 0;
    }
}

// homepage items
#announcement-rotator {
    margin: 0 -@grid-gutter-width/2 @spacing-lg-px;

    .item {
        img {
            width: 100%;
        }
    }
}

.announcement-list {
    .announcement {
        margin: 0 auto @spacing-lg-px;
        max-width: 390px;
    }

    .announcement-title {
        margin: @spacing-sm-px 0;
    }

    img {
        width: 100%;
    }
}

.announcement-detail {
    img {
        width: 100%;
    }
}

.nav-sub {
    li {
        border: 1px solid @gray-lighter;
        border-radius: @border-radius-base;
    }
}

footer {
    margin-bottom: 50px;

    .footer-message {
        float: left;
    }

    .footer-address {
        float: right;
    }
}

#splash.error {
    background-color: @gray-lighter;

    #content {
        margin-top: 20px;
        background-color: @body-bg;
        border-radius: @border-radius-base;
        padding: 20px;
    }
}

.not-found h2 {
    font-size: 200px;
    font-weight: @font-weight-bold;
    letter-spacing: -5px;
    line-height: 210px;

    i {
        color: #F03;
        font-size: 210px;
        position: relative;
        top: -12px;
    }
}

/* hide block panels */
.panel.panel-block {
    border: 0;
    box-shadow: none;

    & > .panel-heading {
        display: none;
    }

    & > .panel-body {
        padding: 0;

        .grid.grid-panel {
            margin: 0;
        }
    }
}

// 4. Responsive Overrides
// -------------------------

// default styling should be for phones 767px or less

@media (max-width: @screen-sm-min) {
    #top-bar {
        font-size: @font-size-base - 4px;
    }

    .navbar-inverse {
        .navbar-nav {
            .open {
                .dropdown-menu {
                    li {
                        a {
                            color: #fff;

                            &:hover {
                                color: green;
                                background-color: @navbar-background;
                            }
                        }
                    }
                }
            }
        }
    }

    .feature-image {
        background: url("/Content/feature.png") 50% 0px no-repeat;
        height: 280px;
    }
}

// Small devices (tablets, 768px and up)
@media (min-width: @screen-sm-min) {
    #announcement-rotator {
        margin: @spacing-lg-px 0;
    }

    #top-bar {
        font-size: @font-size-base - 2px;
    }
}

// Medium devices (desktops, 992px and up)
@media (min-width: @screen-md-min) {
    #top-bar {
        font-size: @font-size-base;
    }

    .nav-container {
        float: right;
        text-align: right;
    }

    .feature-image {
        background: url("/Content/feature.png") 50% 0px no-repeat;
        height: 500px;
    }
}

// Large devices (large desktops, 1200px and up)
@media (min-width: @screen-lg-min) {
    #top-bar {
        font-size: @font-size-base + 3px;
    }
}

blockquote {
    padding: 10px 20px;
    margin: 0 0 20px;
    font-size: 14px;
    border-left: 3px solid #888;
    background-color: #f9f9f9;
    color: #888;
    font-style: italic;
}

.small-top-margin {
    margin-top: 25px;
}

/*** Vertical Tabs ***/

.live-tabs {
    .nav-tabs {
        background-color: darken(@navbar-background, 10%);
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;

        li {
            a {
                color: #888;
                font-size: 2em;
            }
        }
    }
}

.live-tabs .nav-tabs .active a {
    color: #fff !important;
}

.footer {
    color: #fff;

    a {
        color: #fff;

        &:hover {
            color: @newpointe-green;
        }
    }

    .copyright {
        font-size: 11px;
        line-height: 13px;
    }
}

.navbar-inverse .navbar-toggle {
    background-color: @newpointe-green;
    margin-top: 30px;
}

.navbar-inverse .navbar-nav > li > a {
    color: #fff;
}

.navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:hover, .navbar-inverse .navbar-nav > .open > a:focus {
    color:#fff;
    background:@navbar-background;
}

.open{
    .dropdown-menu{
        border:none;
        background:@navbar-background;
        
        a{
            color:#fff;
        }
    }
}

.mdl-layout__content{
    background: darken(@navbar-background, 10%);
}

#prayer-table{
    background:#fff;
    th{
        background:@newpointe-green;
    }
}

h1{
    color:#fff;
}